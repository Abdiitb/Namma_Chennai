{
  "expo": {
    "name": "Namma_Chennai",
    "slug": "Namma_Chennai",
    "version": "1.0.0",
    "orientation": "portrait",
    "updates": {
      "enabled": false,
      "checkAutomatically": "OFF"
    },
    "icon": "./assets/images/icon.png",
    "scheme": "nammachennai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "googleMapsApiKey": "AIzaSyDqToSXm81g4abPkz6X-CDeVEd22OqL9As",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow $(PRODUCT_NAME) to use speech recognition.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone for voice input."
      },
      "bundleIdentifier": "com.anonymous.Namma-Chennai"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDqToSXm81g4abPkz6X-CDeVEd22OqL9As"
        }
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.INTERNET"
      ],
      "package": "com.anonymous.Namma_Chennai"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "Namma Chennai",
      "shortName": "Namma Chennai",
      "description": "Your gateway to city services and information",
      "lang": "en",
      "scope": "/",
      "display": "standalone",
      "orientation": "portrait",
      "themeColor": "#2174D4",
      "backgroundColor": "#FAFAFA",
      "startUrl": "/",
      "manifest": {
        "name": "Namma Chennai",
        "short_name": "Namma Chennai",
        "description": "Your gateway to city services and information",
        "start_url": "/",
        "display": "standalone",
        "background_color": "#FAFAFA",
        "theme_color": "#2174D4",
        "orientation": "portrait",
        "icons": [
          {
            "src": "./assets/images/icon.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
          },
          {
            "src": "./assets/images/icon.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
          }
        ]
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "cameraPermission": "Allow Namma Chennai to access your camera to take photos for ticket attachments.",
          "photosPermission": "Allow Namma Chennai to access your photos to attach images to tickets."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Namma Chennai to access your location to auto-fill ticket address."
        }
      ],
       [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInDebug": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
